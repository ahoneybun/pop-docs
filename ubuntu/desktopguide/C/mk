	rm -f ../../../build/ubuntu/desktopguide/C/*.*
	rm -f ../../../build/ubuntu/desktopguide/C/sample/*
	
	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/desktopguide.db" ../../libs/ubuntu-html-chunk-cust.xsl desktopguide.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/bookinfo.db" ../../libs/ubuntu-html-chunk-cust.xsl bookinfo.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/preface.db" ../../libs/ubuntu-html-chunk-cust.xsl ../../../common/C/preface.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/getting-started.db" ../../libs/ubuntu-html-chunk-cust.xsl getting-started.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/add-applications.db" ../../libs/ubuntu-html-chunk-cust.xsl add-applications.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/common-tasks.db" ../../libs/ubuntu-html-chunk-cust.xsl common-tasks.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/config-system.db" ../../libs/ubuntu-html-chunk-cust.xsl config-system.xml

	xsltproc --stringparam collect.xref.targets "only" --stringparam targets.filename "db/getting-help.db" ../../libs/ubuntu-html-chunk-cust.xsl getting-help.xml

	xsltproc --xinclude --output ../../../build/ubuntu/desktopguide/C/index.html --stringparam target.database.document "olinkdb.xml" --stringparam current.docid "DesktopGuide" ../../libs/ubuntu-html-chunk-cust.xsl desktopguide.xml 

	xsltproc --xinclude --output ../../../build/ubuntu/desktopguide/C/desktopguide-all.html --stringparam target.database.document "olinkdb.xml" --stringparam current.docid "DesktopGuide" ../../libs/ubuntu-html-single-cust.xsl desktopguide.xml 
	
	mkdir -p ../../../build/ubuntu/images/C
	
	cp -r ../../images/C/*.* ../../../build/ubuntu/images/C
	
	mkdir -p ../../../build/ubuntu/images/admon
	cp -r ../../../common/admon/*.* ../../../build/ubuntu/images/admon
	
	mkdir -p ../../../build/ubuntu/images/callouts
	cp -r ../../../common/callouts/*.* ../../../build/ubuntu/images/callouts
	
	mkdir -p ../../../build/ubuntu/images/navig
	cp -r ../../../common/navig/*.* ../../../build/ubuntu/images/navig
	
	mkdir -p ../../../build/ubuntu/desktopguide/C/sample
	cp -r sample/* ../../../build/ubuntu/desktopguide/C/sample/
	
	# copy style sheet and common images to build directory
	mkdir -p ../../../build/ubuntu/common/img
	cp ../../libs/*css ../../../build/ubuntu/common/
	cp ../../libs/img/*png ../../../build/ubuntu/common/img/
	
