msgstr "alustus"

#: hardware/C/hardware.xml:94(secondary)
msgid "formatting"
msgstr "alustaminen"

#: hardware/C/hardware.xml:98(primary)
msgid "mount"
msgstr "liittäminen"

#: hardware/C/hardware.xml:102(primary)
msgid "unmount"
msgstr "irrottaminen"

#: hardware/C/hardware.xml:103(secondary)
