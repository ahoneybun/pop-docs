"slapcat -f schema_convert.conf -F /tmp/ldif_output -n0 -s "
"\"cn={5}dyngroup,cn=schema,cn=config\" &gt; /tmp/cn=dyngroup.ldif"

#: serverguide/C/network-auth.xml:458(para)
msgid ""
