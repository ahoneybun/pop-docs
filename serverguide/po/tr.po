"        bridge_ports eth0\n"
"        bridge_fd 9\n"
"        bridge_hello 2\n"
"        bridge_maxage 12\n"
"        bridge_stp off\n"
msgstr ""
"\n"
"auto lo\n"
"iface lo inet loopback\n"
"\n"
"auto br0\n"
"iface br0 inet static\n"
"        address 192.168.0.10\n"
"        network 192.168.0.0\n"
"        netmask 255.255.255.0\n"
"        broadcast 192.168.0.255\n"
"        gateway 192.168.0.1\n"
"        bridge_ports eth0\n"
"        bridge_fd 9\n"
"        bridge_hello 2\n"
"        bridge_maxage 12\n"
"        bridge_stp off\n"

