"  readonly = \"no\" ]\n"
"\n"
"NIC    = [ NETWORK=\"LAN\" ]\n"
"\n"
"GRAPHICS = [type=\"vnc\",listen=\"127.0.0.1\",port=\"-1\"]\n"

#: serverguide/C/virtualization.xml:2150(para)
