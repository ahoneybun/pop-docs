#, no-wrap
msgid ""
"\n"
"$myhostname = 'mail.example.com';\n"
"@local_domains_acl = ( \"example.com\", \"example.org\" );\n"
msgstr ""
"\n"
"$myhostname = 'mail.example.com';\n"
"@local_domains_acl = ( \"example.com\", \"example.org\" );\n"

#: serverguide/C/mail.xml:1447(para)
msgid ""
"After configuration <application>Amavisd-new</application> needs to be "
"restarted:"
