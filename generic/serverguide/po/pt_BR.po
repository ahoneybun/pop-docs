msgstr "Digite o nome do novo <emphasis>Volume</emphasis>:"

#: ../generic/serverguide/C/backups.xml:832(userinput)
#, no-wrap
msgid "Sunday"
msgstr "Domingo"

#: ../generic/serverguide/C/backups.xml:831(computeroutput)
#, no-wrap
msgid ""
"\n"
"Enter new Volume name: <placeholder-1/>\n"
"Defined Pools:\n"
"     1: Default\n"
"     2: Scratch"
msgstr ""
"\n"
"Digite o novo nome do Volume: <placeholder-1/>\n"
"Pools Definidas:\n"
"     1: Padrão\n"
"     2: Zerado"

#: ../generic/serverguide/C/backups.xml:837(para)
msgid "Replace <emphasis>Sunday</emphasis> with the desired label."
msgstr "Substitua <emphasis>Domingo</emphasis> com o rótulo desejado."

#: ../generic/serverguide/C/backups.xml:842(para)
msgid "Now, select the <emphasis>Pool</emphasis>:"
msgstr "Agora, selecione o <emphasis>Pool</emphasis>:"

#: ../generic/serverguide/C/backups.xml:847(userinput)
