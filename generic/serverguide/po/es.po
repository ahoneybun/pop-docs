#, no-wrap
msgid ""
"\n"
"ENABLED=1\n"
msgstr ""
"\n"
"ENABLED=1\n"

#: ../generic/serverguide/C/mail.xml:1247(para)
msgid "Now start the daemon:"
msgstr "Ahora arranque el demonio:"

#: ../generic/serverguide/C/mail.xml:1251(command)
msgid "sudo /etc/init.d/spamassassin start"
msgstr "sudo /etc/init.d/spamassassin start"

