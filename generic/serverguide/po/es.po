"$TTL    604800\n"
"@       IN      SOA     ns.ejemlpo.com. root.ejemplo.com. (\n"
"                              2         ; Serial\n"
"                         604800         ; Refresh\n"
"                          86400         ; Retry\n"
"                        2419200         ; Expire\n"
