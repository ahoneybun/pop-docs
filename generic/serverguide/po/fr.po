"date\n"
"echo\n"
"\n"
"# On vérifie le rembobinage de la bande...\n"
"mt -f $dest rewind\n"
"\n"
"# Utilisation de tar pour la sauvegarde.\n"
"tar czf $dest $backup_files\n"
"\n"
"# Rembobinage et éjection de la bande.\n"
"mt -f $dest rewoffl\n"
"\n"
"# Affiche le message de fin de sauvegarde.\n"
"echo\n"
"echo \"Sauvegarde terminée\"\n"
