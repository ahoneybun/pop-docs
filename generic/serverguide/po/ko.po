msgid ""
"\n"
"anonymous_enable=NO\n"
msgstr ""
"\n"
"anonymous_enable=NO\n"

#: C/network-applications.xml:702(programlisting)
#, no-wrap
msgid ""
"\n"
"#local_enable=YES\n"
msgstr ""
"\n"
